<ul id="todo-list">
	<!-- These are here just to show the structure of the list items -->
	<!-- List items should get the class `editing` when editing and `completed` when marked as completed -->
	{{#items}}
		<li {{#if isCompleted}}class="completed"{{/if}} data-index="{{@index}}">
			<div class="view">
				<input class="toggle" type="checkbox" {{#if isCompleted}}checked{{/if}}>
				<label>{{label}}</label>
				<button class="destroy"></button>
			</div>
			<form>
				<input class="edit" value="{{label}}" type="text">
			</form>
		</li>
	{{/items}}
</ul>
