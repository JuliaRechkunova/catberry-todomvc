{
  "name": "catberry-todomvc",
  "version": "0.7.5",
  "description": "TodoMVC implementation on Catberry Framework",
  "repository": {
    "type": "git",
    "url": "git@github.com:catberry/catberry-todomvc.git"
  },
  "main": "./server.js",
  "browser": {
    "./config/environment.js": "./config/browser.js"
  },
  "author": "Julia Rechkunova",
  "license": "MIT",
  "dependencies": {
    "catberry": "^7.0.0",
    "catberry-handlebars": "^1.0.8",
    "connect": "^3.0.0",
    "errorhandler": "^1.0.0",
    "gulp": "^3.9.0",
    "serve-static": "^1.0.0",
    "todomvc-app-css": "^1.0.0",
    "todomvc-common": "^1.0.0"
  },
  "devDependencies": {
    "jscs": "^2.5.1",
    "jshint": "^2.8.0"
  },
  "engines": {
    "node": ">=0.10"
  },
  "scripts": {
    "start": "npm run release",
    "release": "node ./build.js release && gulp && node ./server.js release $PORT",
    "debug": "node ./build.js & ./node_modules/.bin/gulp & node ./server.js",
    "debug-win": "powershell -Command \"Start-Process -NoNewWindow node ./build.js; Start-Process -NoNewWindow -Wait ./node_modules/.bin/gulp; Start-Process -NoNewWindow -Wait node ./server.js\"",
    "lint": "./node_modules/.bin/jshint ./ && ./node_modules/.bin/jscs ./",
    "test": "npm run lint"
  }
}
